<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:backgroundTint="@color/cardview_light_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_cart_item_wrap">
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        tools:background="@drawable/ninja_sushi"
        android:layout_margin="@dimen/image_margin"
        android:contentDescription="Item image"
        android:id="@+id/iv_cart_item_image"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Ninja Roll"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/title_margin"
            android:id="@+id/tv_cart_item_name"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="This is my description of some stuff....
            potentially some modifiers???"
            android:id="@+id/tv_cart_item_description"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1x"
            android:id="@+id/tv_cart_item_qty"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            tools:text="$7.99"
            android:id="@+id/tv_cart_item_price"/>
        </RelativeLayout>


</LinearLayout>